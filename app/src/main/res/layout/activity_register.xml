<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:gravity="center_horizontal"
    tools:context=".register">
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"

        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="10sp"
        android:layout_marginRight="158sp"
        android:textSize="19sp"
        android:textColor="@color/outlinecolr"/>
    <EditText
        android:id="@+id/editTextInput1"
        android:layout_width="370sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter your Name here"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/input_box_background"
        android:padding="8dp"
        android:gravity="center"
        android:maxLines="1" />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="5sp"
        android:layout_marginRight="159sp"
        android:textSize="19sp"
        android:textColor="@color/outlinecolr"/>
    <EditText
        android:id="@+id/editTextInput2"
        android:layout_width="370sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter your Email here"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/input_box_background"
        android:padding="8dp"
        android:gravity="center"
        android:maxLines="1" />
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_marginTop="5sp"
        android:layout_marginRight="150sp"
        android:textSize="19sp"
        android:textColor="@color/outlinecolr"/>
    <EditText
        android:id="@+id/editTextInput3"
        android:layout_width="370sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter your Address here"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/input_box_background"
        android:padding="8dp"
        android:gravity="center"
        android:maxLines="1" />
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="5sp"
        android:layout_marginRight="140sp"
        android:textSize="19sp"
        android:textColor="@color/outlinecolr"/>
    <EditText
        android:id="@+id/editTextInput4"
        android:layout_width="370sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter your Username here"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/input_box_background"
        android:padding="8dp"
        android:gravity="center"
        android:maxLines="1" />
    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_marginTop="5sp"
        android:layout_marginRight="155sp"
        android:textSize="19sp"
        android:textColor="@color/outlinecolr"/>
    <EditText
        android:id="@+id/editTextInput5"
        android:layout_width="370sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter your Gender here"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/input_box_background"
        android:padding="8dp"
        android:gravity="center"
        android:maxLines="1" />
    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="5sp"
        android:layout_marginRight="140sp"
        android:textSize="19sp"
        android:textColor="@color/outlinecolr"/>
    <EditText
        android:id="@+id/editTextInput6"
        android:layout_width="370sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter your Password here"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/input_box_background"
        android:padding="8dp"
        android:gravity="center"
        android:maxLines="1" />
    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:layout_marginTop="5sp"
        android:layout_marginRight="105sp"
        android:textSize="19sp"
        android:textColor="@color/outlinecolr"/>
    <EditText
        android:id="@+id/editTextInput7"
        android:layout_width="370sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter your Confirm Password here"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/input_box_background"
        android:padding="8dp"
        android:gravity="center"
        android:maxLines="1" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:text="SUBMIT"
        style="@style/CustomButtonStyle"/>
</LinearLayout>